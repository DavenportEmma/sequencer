menu "Sequencer Configuration"

config RESET_SEQ_ON_DISABLE
    bool "reset the step counter on disable"
    default n

config ENABLE_STARTUP_MEMORY_CLEAR
    bool "enable the ability to delete the entire flash memory by holding a key on startup"
    default n

config AUTO_INC_STEP_ON_MIDI_IN
    bool "automatically increment the current step when a midi in packet is received"
    default y

endmenu # Sequencer Configuration